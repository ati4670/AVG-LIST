// ==UserScript==
// @name         Sukebei Auto Open First Link
// @namespace    http://tampermonkey.net/
// @version      0.1
// @description  等待3秒後自動在背景中打開第一個包含 _s.jpg 字串的連結
// @author       ati4670
// @match        https://sukebei.nyaa.si/view/*
// @grant        none
// ==/UserScript==

(function() {
    'use strict';

    // 等待3秒
    setTimeout(() => {
        // 獲取第一個包含 _s.jpg 的連結
        const link = document.querySelector('a[href*="_s.jpg"]');

        // 在背景中打開該連結
        if (link) {
            window.open(link.href, '_blank');
        }
    }, 2000); // 2000 毫秒 = 2 秒
})();
